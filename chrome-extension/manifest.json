{
  "manifest_version": 2,

  "name": "My Fourth Extension",
  "description": "今いるページの背景色を変えるよ！ with optino pange",
  "version": "0.1",

  "permissions": [
    "tabs", "http://*/*"
  ],

  "options_page": "options.html",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon19.png",
    "default_title": "My Fourth Extension"
  }
}
